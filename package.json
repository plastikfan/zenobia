{
  "name": "zenobia",
  "version": "0.0.1",
  "description": "Regular expression based file management library",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "t": "mocha ./dist/zenobia-test-bundle.js",
    "test": "npm audit --skip-unused && npm run t",
    "build": "npm run build:d",
    "build:d": "webpack -d --env.mode development",
    "build:p": "webpack -p --env.mode production",
    "build:t": "webpack --config webpack.config.test.js",
    "exec": "node ./dist/zenobia-bundle.js",
    "lint": "npx semistandard --verbose | npx snazzy",
    "fix": "npx semistandard --fix",
    "watch": "webpack --watch --env.mode development",
    "watch:t": "webpack --watch --env.mode development --config webpack.config.test.js",
    "audit": "npm audit --skip-unused",
    "dep": "depcheck --ignores 'xpath,webpack-cli,sinon,@commitlint/cli,@commitlint/config-conventional,precommit-hook,shebang-loader,raw-loader'",
    "check": "npm run audit && npm run dep && npm outdated --depth 0",
    "validate": "npm run lint && npm run build && npm run build:t && npm test",
    "cm": "npx git-cz",
    "rep": "nyc report --reporter=lcov --reporter text summary",
    "cov": "nyc mocha ./dist/zenobia-test-bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plastikfan/zenobia.git"
  },
  "keywords": [
    "regex",
    "xml",
    "filesystem"
  ],
  "author": "plastikfan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/plastikfan/zenobia/issues"
  },
  "homepage": "https://github.com/plastikfan/zenobia#readme",
  "dependencies": {
    "@types/ramda": "^0.26.36",
    "jaxine": "^2.0.1",
    "ramda": "^0.26.1",
    "xmldom": "^0.1.27",
    "xpath": "0.0.27"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^7.6.0",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "depcheck": "^0.8.0",
    "dirty-chai": "^2.0.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "precommit-hook": "^3.0.0",
    "raw-loader": "^2.0.0",
    "rimraf": "^2.6.3",
    "semistandard": "^13.0.1",
    "shebang-loader": "0.0.1",
    "sinon": "^7.3.2",
    "snazzy": "^8.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-config-utils": "^2.3.1",
    "webpack-node-externals": "^1.7.2"
  },
  "pre-commit": [
    "lint",
    "validate",
    "test"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "semistandard": {
    "env": [
      "mocha"
    ]
  }
}
